{
  "enabled": true,
  "name": "Gherkin Test Generator",
  "description": "Automatically generates executable tests from saved Gherkin feature files in docs/features/*.feature, following all rules in agent-hook-spec.md and consulting Context7 MCP before writing any test code",
  "version": "1",
  "when": {
    "type": "fileEdited",
    "patterns": [
      "docs/features/*.feature"
    ]
  },
  "then": {
    "type": "askAgent",
    "prompt": "Read #[[file:docs/agent-hook-spec.md]] for complete instructions. Generate executable tests from the saved Gherkin feature file following all rules in the spec. MANDATORY: Consult Context7 MCP before writing ANY test code."
  }
}